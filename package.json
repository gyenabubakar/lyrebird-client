{
  "name": "lyrebird",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "app",
    "ui",
    "packages/*"
  ],
  "scripts": {
    "prepare": "is-ci || husky install",
    "dev": "turbo run dev --parallel",
    "dev:ui": "turbo run dev --filter=@lyrebird/ui",
    "dev:app": "turbo run dev --filter=@lyrebird/app",
    "build": "turbo run build",
    "build:ui": "turbo run build --filter=@lyrebird/ui",
    "build:app": "turbo run build --filter=@lyrebird/app",
    "code-quality:format": "prettier --write '**/*.{js,jsx,ts,tsx,md,json,vue,html,css}'",
    "code-quality:lint": "eslint --ext .js,.jsx,.ts,.tsx,.vue,.html .",
    "code-quality:all": "npm run code-quality:format -- --loglevel silent && npm run code-quality:lint -- --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "prettier": "2.8.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "turbo": "*",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": "18.x",
    "npm": ">=8.x",
    "yarn": "please-use-npm"
  },
  "packageManager": "npm@8.15.0"
}
