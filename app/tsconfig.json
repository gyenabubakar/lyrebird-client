{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "~": ["./"],
      "~/*": ["./*"],
      "#imports": ["./.nuxt/imports"],
      "@lyrebird/ui": ["../ui/src"],
      "@lyrebird/ui/*": ["../ui/src/*"]
    }
  }
}
